<Window x:Class="Insight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="1000">
    
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            
            <StackPanel>
                <Button
                    x:Name="btnTimelineZoomIn"
                    Height="50"
                    Content="Zoom In"
                    Click="btnTimelineZoomIn_Click"
                    Margin="2"
                    />
                
                <Button
                    x:Name="btnTimelineZoomOut"
                    Height="50"
                    Content="Zoom Out"
                    Click="btnTimelineZoomOut_Click"
                    Margin="2"
                    />
                
                <Button
                    x:Name="btnTimelineZoomReset"
                    Height="50"
                    Content="Reset Zoom"
                    Click="btnTimelineZoomReset_Click"
                    Margin="2"
                    />

                <Button
                    x:Name="btnTimelineReload"
                    Height="50"
                    Content="Reload Data"
                    Click="btnTimelineReload_Click"
                    Margin="2"
                    />
                
                <TextBox
                    x:Name="txtSearch"
                    Height="25"
                    Margin="2,20,2,1"
                 />
                
                <Button
                    x:Name="btnSearch"
                    Height="30"
                    Content="Search"
                    Margin="2,2,2,20" Click="btnSearch_Click"
                 />
                
                <Label
                    Content="Show These Events:"
                />

                <ScrollViewer
                    Height="120"
                    Margin="2">

                    <StackPanel>

                        <CheckBox
                            x:Name="chkEXIF"
                            Content="EXIF"
                            IsChecked="True"
                         />
                        

                    </StackPanel>

                </ScrollViewer>

            </StackPanel>

        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="700"/>
                <RowDefinition Height="10" />
            </Grid.RowDefinitions>
            <UserControl 
            xmlns:timeline="clr-namespace:TimelineLibrary;assembly=TimelineLibrary"
            Height="700"  Grid.Row="0">

                <timeline:TimelineTray
                x:Name="timeline"
                Height="700"
                Grid.Row="0"
                CalendarType="gregorian"
                HorizontalAlignment="Stretch"
                MinDateTime="01/01/2004"
                MaxDateTime="01/01/2006"
                CurrentDateTime="06/01/2005"
                ImmediateDisplay="False"
                SelectionChanged="timeline_SelectionChanged" VerticalAlignment="Top"
                >

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <timeline:TimelineBand
                        x:Name="hourTimeBand"
                        Grid.Row="0"
                        IsMainBand="True"
                        ItemSourceType="hours"
                        HorizontalAlignment="Stretch"
                        TimelineWindowSize="20"
                        MaxEventHeight="20"
                        
                   />

                    <timeline:TimelineBand
                    Grid.Row="1"
                    Height="60"
                    HorizontalAlignment="Stretch"
                    ItemSourceType="days"
                    TimelineWindowSize="16"
                    MaxEventHeight="4"
                    />

                    <timeline:TimelineBand
                    x:Name="monthTimeBand"
                    Grid.Row="2"
                    Height="60"
                    HorizontalAlignment="Stretch"
                    ItemSourceType="months"
                    TimelineWindowSize="12"
                    MaxEventHeight="4"
                    />



                </timeline:TimelineTray>



            </UserControl>
        </Grid>

    </Grid>
    
    
</Window>
