<Window x:Class="Insight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="1000">
    
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="500"/>
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <UserControl 
            xmlns:timeline="clr-namespace:TimelineLibrary;assembly=TimelineLibrary"
            Height="500"  Grid.Row="0">

                <timeline:TimelineTray
                x:Name="timeline"
                Height="500"
                Grid.Row="0"
                CalendarType="gregorian"
                HorizontalAlignment="Stretch"
                MinDateTime="01/01/2006"
                MaxDateTime="01/01/2007"
                CurrentDateTime="06/01/2006"
                ImmediateDisplay="False"
                >

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <timeline:TimelineTray.Urls>
                        <timeline:UriInfo Url="http://localhost:8080/example.xml" />
                    </timeline:TimelineTray.Urls>

                    <timeline:TimelineBand
                        x:Name="hourTimeBand"
                        Grid.Row="0"
                        IsMainBand="True"
                        ItemSourceType="hours"
                        HorizontalAlignment="Stretch"
                        TimelineWindowSize="20"
                   />

                    <timeline:TimelineBand
                    Grid.Row="1"
                    Height="60"
                    HorizontalAlignment="Stretch"
                    ItemSourceType="days"
                    TimelineWindowSize="16"
                    MaxEventHeight="4"
                    />

                    <timeline:TimelineBand
                    Grid.Row="2"
                    Height="60"
                    HorizontalAlignment="Stretch"
                    ItemSourceType="months"
                    TimelineWindowSize="12"
                    MaxEventHeight="4"
                    />



                </timeline:TimelineTray>



            </UserControl>
            <Button x:Name="ResetButton" Content="Toggle Zoom" HorizontalAlignment="Center" Width="220" Click="ResetButton_Click" Grid.Row="1"  Height="31" VerticalAlignment="Bottom" />
        </Grid>

    </Grid>
    
    
</Window>
