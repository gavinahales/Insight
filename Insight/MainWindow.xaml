<Window x:Class="Insight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="500"/>
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <UserControl 
            xmlns:timeline="clr-namespace:TimelineLibrary;assembly=TimelineLibrary"
            Height="400" Margin="0,10,0,117" Grid.Row="0">

            <timeline:TimelineTray
                x:Name="timeline"
                Height="300"
                Grid.Row="0"
                CalendarType="gregorian"
                HorizontalAlignment="Stretch"
                MinDateTime="01/01/2006"
                MaxDateTime="01/01/2007">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>

                <timeline:TimelineTray.Urls>
                    <timeline:UriInfo Url="http://localhost:8080/example.xml" />
                </timeline:TimelineTray.Urls>

                <timeline:TimelineBand
                    Grid.Row="0"
                    IsMainBand="True"
                    ItemSourceType="hours"
                    HorizontalAlignment="Stretch"
                    TimelineWindowSize="20"
                    MaxEventHeight="130" />

                <timeline:TimelineBand
                    Grid.Row="1"
                    Height="80"
                    HorizontalAlignment="Stretch"
                    ItemSourceType="days"
                    TimelineWindowSize="16"
                    MaxEventHeight="4"
                    />

                <timeline:TimelineBand
                    Grid.Row="2"
                    Height="80"
                    HorizontalAlignment="Stretch"
                    ItemSourceType="months"
                    TimelineWindowSize="12"
                    MaxEventHeight="4"
                    />



            </timeline:TimelineTray>



        </UserControl>
        <Button Content="Button" HorizontalAlignment="Left" Height="31" VerticalAlignment="Top" Width="221" Click="Button_Click" Grid.Row="1" Margin="135,20,0,0"/>
    </Grid>
</Window>
