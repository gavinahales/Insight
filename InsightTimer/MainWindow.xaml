<Window x:Class="InsightTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InsightTimer" Height="250" Width="350" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel>
            <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="5" Height="50">
                <TextBlock x:Name="lblStatus" Text="Testing connectivity. Please wait..." MinHeight="50" TextWrapping="Wrap" />
            </ScrollViewer>
            <Separator />
            <Label Content="Participant ID:" />
            <TextBox x:Name="txtParticipantID" Margin="5" />
            <Button x:Name="btnStart" Content="Start Experiment" Height="30" Margin="5" Click="btnStart_Click" />
            <Button x:Name="btnStop" Content="End Experiment" Height="30" Margin="5" IsEnabled="False" Click="btnStop_Click" />
        </StackPanel>
    </Grid>
</Window>
